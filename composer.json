{
    "name": "nicolapez/custom-oauth2-php",
    "type": "library",
    "description": "OAuth2 library - custom form for business logic",
    "license": "MIT",
    "keywords": ["oauth", "oauth2"],
    "homepage": "https://github.com/nicolapez/custom-oauth2-php",
    "authors": [
        {
            "name": "Nicola Pezzoli",
            "email": "nicola.pezzoli1990@gmail.com"
        }
    ],

    "require": {
        "php": "^5.5.9|>=7.0.8",
        "symfony/http-foundation": "~3.0|~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8 || ^5.0"
    },

    "autoload": {
        "psr-4": {
            "OAuth2\\": "lib/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OAuth2\\Tests\\": "tests/"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.2.x-dev"
        }
    }
}
